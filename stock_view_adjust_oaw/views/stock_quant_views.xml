<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_quant_tree" model="ir.ui.view">
        <field name="name">view.stock.quant.tree</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock_move_line_quant.view_stock_quant_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="editable">top</attribute>
            </xpath>
            <xpath expr="//field[@name='reservation_picking_id']" position="after">
                <field name="sale_order_id" />
                <field name="client_order_ref" />
                <field name="quant_note" />
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="image_medium" widget="image" options='{"size": [64, 64]}'/>
            </xpath>
        </field>
    </record>
        <record id="quant_search_view" model="ir.ui.view">
                    <field name="name">quant.search.view</field>
                    <field name="model">stock.quant</field>
                    <field name="inherit_id" ref="stock.quant_search_view" />
                    <field name="arch" type="xml">
                        <xpath expr="//field[@name='owner_id']" position="after">
                            <field name="client_order_ref" string="Remark" />
                        </xpath>
                    </field>
                </record>

                <!-- Product Offer (EN): Availability = Product Offer Available -->
                <!--TODO: Get New Price-->
                <record id="stock_quant_kanban" model="ir.ui.view">
                    <field name="name">Product.template.kanban.availability</field>
                    <field name="model">stock.quant</field>
                    <field name="arch" type="xml">
                        <kanban>
                            <field name="type" />
                            <field name="id" />
                            <field name="image" />
                            <field name="default_code" />
                            <field name="overseas_stock" />
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click">
                                        <div class="o_kanban_image" style="width: 150px; height: 150px;">
                                            <img style="width: 150px; height: 150px;" t-att-src="kanban_image('product.template', 'image', record.id.raw_value)" alt="Product" />
                                        </div>
                                        <div class="oe_kanban_details" style="padding-left: 155px;">
                                            <h4>
                                                <span t-if="record.default_code.raw_value">
                                        [                                                    <field name="default_code" />
]
                                                </span>
                                                <field name="name" />
                                            </h4>
                                            <div name="tags" />
                                            <ul>
                                                <li>Brand:
                                                    <field name="brand" />
                                                </li>
                                                <li t-if="record.overseas_stock.raw_value != 'No'"> Overseas Retail in <field name="curr_of_cheapest" />
:                                                <field name="retail_of_cheapest" />
                                            </li>
                                            <li id="hk-retail1">HK Retail:
                                                <field name="list_price_integer" />
                                            </li>
                                            <li t-if="record.type.raw_value != 'service'">HK Stock:
                                                <field name="local_stock" no_export="True" />
                                            </li>
                                            <li t-if="record.type.raw_value != 'service'">Overseas Stock:
                                                <field name="overseas_stock" no_export="True" />
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </t>
                        </templates>
                    </kanban>
                </field>
            </record>
            <record id="stock_move_line_quant.action_stock_quant" model="ir.actions.act_window">
                <field name="name">Stock Quant</field>
                <field name="res_model">stock.quant</field>
                <field name="type">ir.actions.act_window</field>
                <field name="view_type">form</field>
                <field name="view_mode">tree,kanban</field>
                <field name="context">{'search_default_internal_loc': 1, 'search_default_positive': 1}</field>
                <field name="search_view_id" ref="stock.quant_search_view" />
            </record>

            <!--Actions directing to view modes with certain search view defaults-->
            <record id="action_stock_quant_tree" model="ir.actions.act_window.view">
                <field name="view_mode">tree</field>
                <field name="sequence">1</field>
                <field name="view_id" ref="stock_move_line_quant.view_stock_quant_tree" />
                <field name="act_window_id" ref="stock_move_line_quant.action_stock_quant" />
            </record>
            <record id="action_stock_quant_kanban" model="ir.actions.act_window.view">
                <field name="view_mode">kanban</field>
                <field name="sequence">2</field>
                <field name="view_id" ref="stock_quant_kanban" />
                <field name="act_window_id" ref="stock_move_line_quant.action_stock_quant" />
            </record>

            <menuitem action="stock_move_line_quant.action_stock_quant" id="menu_stock_quant" parent="stock.menu_warehouse_report" sequence="10" />
        </odoo>
