<odoo>
    <!--Replaces description field in stock move ext tree view-->
    <record id="view_move_tree_extended" model="ir.ui.view">
        <field name="name">stock.move.tree.ext</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock_view_adjust_oaw.view_move_tree_extended"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="prod_ref"></field>
                <field name="prod_code"></field>
            </xpath>
        </field>
    </record>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">view.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                   position="after">
                <field name="prod_ref"></field>
                <field name="prod_code"></field>
            </xpath>
        </field>
    </record>
    <record id="stock_move_search" model="ir.ui.view">
        <field name="name">stock.move.search</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock_view_adjust_oaw.stock_move_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="prod_ref"></field>
                <field name="prod_code"></field>
            </xpath>
        </field>
    </record>

</odoo>
