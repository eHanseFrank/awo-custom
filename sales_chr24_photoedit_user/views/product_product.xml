<odoo>
    <!--Tree View for sale_chr24_photoedit     -->
    <record id="chono24_view_tree" model="ir.ui.view">
        <field name="name">chono24.view.tree</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree string="Chrono24 Offer" default_order="id desc" editable="top" delete="false">
                <field name="default_code" string="Code" readonly="1"/>
                <field name="image_small" string="Image" widget="image" height="64px"/>
                <field name="list_price" string="Retail HKD" readonly="1"/>
                <field name="qty_reserved" string="Qty Reserved"/>
                <field name="qty_local_stock" widget="integer" string="HK Stock"/>
                <field name="qty_overseas" string="Qty Overseas"/>
                <field name="chrono24_price" string="Chr24 Price"/>
                <field name="chrono24_updated"/>
                <field name="chrono" readonly="1"/>
                <field name="chronoNote"/>
            </tree>
        </field>
    </record>

    <!--Search View for sale_chr24_photoedit     -->
    <record id="chono24_view_search" model="ir.ui.view">
        <field name="name">chono24.view.search</field>
        <field name="model">product.product</field>
        <field name="priority" eval="23"/>
        <field name="arch" type="xml">
            <search>
                <filter name="updated_chrono24" string="Chrono24 updated" domain="[('chrono24_updated','=',True)]"/>
                <filter name="c24_unset" string="Chrono24" domain="[('chrono', '=', True)]"/>
                <filter name="chrono_deac" string="Chrono24 deactive"
                        domain="[('chrono24_updated','=',True),('qty_local_stock','=',0)]"/>
            </search>
        </field>
    </record>
    <!--The action-->
    <record id="action_chono24_view" model="ir.actions.act_window">
        <field name="name">Chrono24 Update</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="chono24_view_tree"/>
        <field name="context">{}</field>
        <field name="search_view_id" ref="chono24_view_search"/>
        <field name="limit">80</field>
    </record>

    <menuitem id="menu_chron24_view_root"
              name="Chrono24 and Products"
              sequence="2"
              groups="group_chr24_photoedit"/>
    <menuitem id="menu_chron24_photoedit_view"
              parent="menu_chron24_view_root"
              name="Chrono24 and Products"
              sequence="2"
              groups="group_chr24_photoedit"/>
    <menuitem id="menu_chron24_view"
              parent="menu_chron24_photoedit_view"
              action="action_chono24_view"
              sequence="2"
              groups="group_chr24_photoedit"/>


    <!-- base structure of product.template, common with product.product -->
    <record id="chono24_view_form" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Product">
                <header>

                </header>
                <sheet>
                    <field name='product_variant_count' invisible='1'/>
                    <field name='is_product_variant' invisible='1'/>
                    <field name='attribute_line_ids' invisible='1'/>
                    <field name="id" invisible="True"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <field name="image_medium" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Product Name"/>
                        <h1><field name="name" placeholder="Product Name"/></h1>
                        <div name="options" groups="base.group_user">
                            <div>
                                <field name="sale_ok"/>
                                <label for="sale_ok"/>
                            </div>
                            <div>
                                <field name="purchase_ok"/>
                                <label for="purchase_ok"/>
                            </div>
                        </div>
                    </div>
                    <notebook>
                        <page string="General Information" name="general_information">
                            <group>
                                <group name="group_general">
                                    <field name="type"/>
                                    <field name="categ_id" string="Product Category"/>
                                </group>
                                <group name="group_standard_price">
                                    <field name="list_price" string="Sales Price" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <label for="standard_price" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                                    <div name="standard_price_uom" groups="base.group_user" attrs="{'invisible': [('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                                        <field name="standard_price" widget='monetary' options="{'currency_field': 'cost_currency_id'}"/>
                                    </div>
                                    <field name="company_id" groups="base.group_multi_company"
                                        options="{'no_create': True}"/>
                                    <field name="uom_id" groups="uom.group_uom" options="{'no_create': True}"/>
                                    <field name="uom_po_id" groups="uom.group_uom" options="{'no_create': True}"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="cost_currency_id" invisible="1"/>
                                    <field name="product_variant_id" invisible="1"/>
                                </group>
                            </group>
                            <group string="Internal Notes">
                                <field name="description" nolabel="1" placeholder="This note is only for internal purposes."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

     <!--The action-->
    <record id="action_chono24_form_view" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="chono24_view_form"/>
        <field name="context">{}</field>
    </record>

      <menuitem id="menu_photoedit_form_view"
              parent="menu_chron24_photoedit_view"
              action="action_chono24_form_view"
              sequence="2"
              groups=""/>
</odoo>
