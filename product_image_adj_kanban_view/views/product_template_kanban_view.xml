<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<record  id="product_template_kanban_view" model="ir.ui.view">
            <field name="name">product.template.kanban.view</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                 <xpath expr='//kanban/templates/t' position="replace">
                  <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" >
                            <div class="o_kanban_image" style="width: 150px; height: 150px;">
                                <img style="width: 150px; height: 150px;" t-att-src="kanban_image('product.template', 'image_medium', record.id.raw_value)" alt="Product"/>
                            </div>
                            <div class="oe_kanban_details" style="padding-left: 155px;">
                                <h4>
                                    <span t-if="record.default_code.raw_value">
                                        [<field name="default_code" />]
                                    </span>
                                    <field name="name" />
                                </h4>
                                <div name="tags" />
                                <ul>
                                    <li>Price: <field name="lst_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"></field></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </xpath>
            </field>
        </record>
</odoo>
