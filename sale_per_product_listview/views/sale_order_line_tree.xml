<odoo>
    <record id="sale_order_lines_tree" model="ir.ui.view">
        <field name="name">sale.order.line.tree</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree string="Sale Order Lines" create="false">
                <field name="name"/>
                <field name="product_id" invisible="1"/>
                <field name="order_partner_id"/>
                <field name="order_id"/>
                <field name="product_uom" string="Unit of Measure" groups="product.group_uom"/>
                <field name="price_subtotal"/>
                <field name="pricelist"/>
                <field name="subtotal_hkd" sum="Total"/>

            </tree>
        </field>
    </record>
    <record id="sale_order_line_tree_search" model="ir.ui.view">
        <field name="name">sale.order.line.tree.search</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <search string="Search Sales Order">
                    <field name="order_id"/>
            </search>
        </field>
    </record>
</odoo>
